@using Kendo.Mvc.UI
@{
    int divNum = 0;
}
<h2>Horizontal Navigation</h2>
<link href="../../../../Content/kendo/kendo.common.min.css" rel="stylesheet" type="text/css" />
<link href="../../../../Content/kendo/kendo.blueopal.min.css" rel="stylesheet" type="text/css" />
<script src="../../../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="../../../../Scripts/kendo/kendo.all.min.js" type="text/javascript"></script>
<article>
    <h3>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</h3>
    <br />
    <div id="main">
        @foreach (string key in ViewBag.Data.Keys)
        {
            List<string> value = ViewBag.Data[key].ToString();
            if (value.Contains("button", StringComparer.CurrentCultureIgnoreCase))
            {   
            <div style="width: 33%">
                <label style="padding-right:5em">@key</label>
                @(Html.Kendo().Button().Name(key).Content(key))
            </div>
            }
            else if (value.Contains("textbox", StringComparer.CurrentCultureIgnoreCase))
            {
            <div style="width: 33%">
                <label style="padding-right:5em">@key</label>
                @(Html.Kendo().AutoComplete().Name(key).Enable(true))
            </div>
            }
            else if (value.Contains("dropdown", StringComparer.CurrentCultureIgnoreCase))
            {
            <div style="width: 33%">
                <label style="padding-right:5em">@key</label>
                @(Html.Kendo().DropDownList().Name(key).DataTextField("Text").DataValueField("Value"))
            </div>
            }
            divNum++;
            if(divNum == 3)
            {
                divNum=0;
                <br style="clear:left" />
                <br />
            }
        }
    </div>
</article>
